
  <div class="site_list">
  <% @sites.each do |site| %>
 

      <% site.images.take(1).each do |img| %>
          <div class="col-xs-6 col-sm-6 col-md-4">
            <div class="thumbnail small">
              <%= link_to image_tag(img.url, alt: img.url), site %>
              <!--
              <img src="<%= img.thumbnail %>" alt="">
              -->
            </div>
            <div class="site_name"><a href="/sites/<%= site.id %>/"><%= site.name %></a></div>
            <div class="site_img_num"><%= site.images.count %> images</div>
          </div>
      <% end %>


  <% end %>
  </div>
