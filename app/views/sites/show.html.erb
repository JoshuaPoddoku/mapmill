<h1>Site details</h1>
<div class="site_information">
<h2><%= @site.name %></h2>
</div>

<div class="alert alert-info" role="alert">
    Use arrow keys, j/k, 1,2,3
</div>

<div class="site_details">
  <div class="row">
        <% @site.images.each do |img| %>
          <div class="col-xs-6 col-sm-3 col-md-3">
            <div class="thumbnail">
              <img src="<%= img.url %>" alt="">
            </div>
            <div class="image_controls">
            </div>
          </div> 
        <% end %>
  </div>
</div>
