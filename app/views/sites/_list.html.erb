
  <div class="site_list">
  <% @sites.each do |site| %>
 
    <div class="site_info"> 
      <div class="img_row">
     <% if false %>
      <% site.images.each do |img| %>
    
          <div class="site_img">
            <!-- show image -->
          </div>
      <% end %>
     <% end %>
      </div>
      <div class="site_details">
        <div class="site_name"><% site.name %></div>
          <% if false %>
        <div class="site_img_num"><% site.images.count %></div>
          <% end %>
      </div>
    </div>

  <% end %>
  </div>
