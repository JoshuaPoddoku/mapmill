<div id="list-page">

	<h2>Admin</h2>

	<div class="list"> 

	<% @sites.each do |site| %>
		<div>
			<a href="/images/<%= site.name %>"><%= site.name %></a><% unless site.active %> (<span style="color:#999;">Archived</span>)<% end %>:
			<i><% if site.active %><a href="admin/archive/<%= site.id %>">Archive</a></a>
			<% else %><a href="admin/activate/<%= site.id %>">Activate</a><% end %></i>
		</div>
	<% end %>
</div>
