<div id="list-page">

	<h2>Admin</h2>

	<p><a href="/admin/import">Import new sites &raquo;</a></p>

	<div class="list"> 

	<% @sites.each do |site| %>
		<div>
			<a href="/images/<%= site.name %>"><%= site.name %></a>
			(<%= site.images.length %> images, <%= site.average %>/10 average score)
			<% unless site.active %> (<span style="color:#999;">Archived</span>)<% end %>:
			<i><% if site.active %><a href="/admin/archive/<%= site.id %>">Archive</a></a>
			<% else %><a href="/admin/activate/<%= site.id %>">Activate</a><% end %></i>
			<% if site.images.length == 0 %> | <i><a href="/admin/import_site/<%= site.name %>">import</a></i><% end %>
		</div>
	<% end %>
</div>
